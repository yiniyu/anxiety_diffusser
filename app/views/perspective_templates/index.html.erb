<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All perspectives
    </h1>

    <a href="/perspectives/new" class="btn btn-block btn-outline-secondary">
      Add a new perspective
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "perspective_templates/perspectives_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Quotes
        </th>

        <th>
          Emotion
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @perspectives.each do |perspective| %>
      <tr>
        <td>
          <%= perspective.id %>
        </td>

        <td>
          <%= perspective.name %>
        </td>

        <td>
          <%= perspective.quotes %>
        </td>

        <td>
          <% if perspective.emotion.present? %>
            <a href="/emotions/<%= perspective.emotion.id %>">
              <%= perspective.emotion.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(perspective.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(perspective.updated_at) %> ago
        </td>

        <td>
          <a href="/perspectives/<%= perspective.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @perspectives, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
