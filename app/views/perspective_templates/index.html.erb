<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All perspectives
    </h1>

    <a href="/perspectives/new" class="btn btn-block btn-outline-secondary">
      Add a new perspective
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "perspective_templates/perspectives_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Quotes
        </th>

        <th>
          Emotion
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @perspectives.each do |perspective| %>
      <tr>
        <!-- Display perspective.id start -->
        <td>
          <%= perspective.id %>
        </td>
        <!-- Display perspective.id end -->

        <!-- Display perspective.name start -->
        <td>
          <%= perspective.name %>
        </td>
        <!-- Display perspective.name end -->

        <!-- Display perspective.quotes start -->
        <td>
          <%= perspective.quotes %>
        </td>
        <!-- Display perspective.quotes end -->

        <!-- Display perspective.emotion_id start -->
        <td>
          <% if perspective.emotion.present? %>
            <a href="/emotions/<%= perspective.emotion.id %>">
              <%= perspective.emotion.name %>
            </a>
          <% end %>
        </td>
        <!-- Display perspective.emotion_id end -->

        <!-- Display perspective.created_at start -->
        <td>
          <%= time_ago_in_words(perspective.created_at) %> ago
        </td>
        <!-- Display perspective.created_at end -->

        <!-- Display perspective.updated_at start -->
        <td>
          <%= time_ago_in_words(perspective.updated_at) %> ago
        </td>
        <!-- Display perspective.updated_at end -->

        <td>
          <a href="/perspectives/<%= perspective.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @perspectives, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
