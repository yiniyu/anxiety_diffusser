<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All emotions
    </h1>

    <a href="/emotions/new" class="btn btn-block btn-outline-secondary">
      Add a new emotion
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @emotions.each do |emotion| %>
      <tr>
        <!-- Display emotion.id start -->
        <td>
          <%= emotion.id %>
        </td>
        <!-- Display emotion.id end -->

        <!-- Display emotion.name start -->
        <td>
          <%= emotion.name %>
        </td>
        <!-- Display emotion.name end -->

        <!-- Display emotion.user_id start -->
        <td>
          <%= emotion.user_id %>
        </td>
        <!-- Display emotion.user_id end -->

        <!-- Display emotion.created_at start -->
        <td>
          <%= time_ago_in_words(emotion.created_at) %> ago
        </td>
        <!-- Display emotion.created_at end -->

        <!-- Display emotion.updated_at start -->
        <td>
          <%= time_ago_in_words(emotion.updated_at) %> ago
        </td>
        <!-- Display emotion.updated_at end -->

        <td>
          <a href="/emotions/<%= emotion.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
