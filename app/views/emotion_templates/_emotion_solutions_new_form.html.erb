<!-- Form solution start -->
<form action="/create_solution_from_emotion" method="post">
<!-- Form solution end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <textarea id="description" name="description" class="form-control" rows="3"><%= @solution.description %></textarea>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for emotion_id start -->
  <!-- Input for emotion_id start -->
  <input type="hidden" name="emotion_id" value="<%= @emotion.id %>">
  <!-- Input for emotion_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create solution
  </button>
</form>
