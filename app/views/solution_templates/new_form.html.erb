<h1>
  Add a new solution
</h1>


<hr>

<!-- Form solution start -->
<form action="/create_solution" method="post">
<!-- Form solution end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <textarea id="description" name="description" class="form-control" rows="3"></textarea>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for emotion_id start -->
  <div class="form-group">
    <label for="emotion_id">
      Emotion
    </label>

    <!-- Input for emotion_id start -->
    <%= select_tag(:emotion_id, options_from_collection_for_select(Emotion.all, :id, :name, @solution.emotion_id), :class => "form-control") %>
    <!-- Input for emotion_id end -->
  </div>
  <!-- Label and input for emotion_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create solution
  </button>
</form>

<hr>

<a href="/solutions">
  Go back
</a>
